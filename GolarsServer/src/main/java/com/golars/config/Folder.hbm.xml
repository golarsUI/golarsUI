<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <class name="com.golars.bean.Folder" table="folder">
  <id name="id">
   <column name="id"  />
  </id>
  <property name="username" column="userName" type="java.lang.String" />
  <property name="parentid" column="parentId" type="java.lang.String" />
  <property name="label" column="name"  type="java.lang.String"/>	
  <property name="folder" column="isFolder" type="java.lang.Boolean"/>
 </class>
</hibernate-mapping>